<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_login_top"
            android:text="登录"
            android:textSize="@dimen/activity_login_top_size"
            android:layout_marginLeft="@dimen/activity_login_text_marginLeft"
            android:layout_marginTop="@dimen/activity_login_text_marginTop"
            android:textColor="@color/black"
            />
    <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入账号和密码"
            android:layout_below="@+id/activity_login_top"
            android:layout_marginLeft="@dimen/activity_login_text_marginLeft"
            android:layout_marginTop="@dimen/activity_login_text_marginLeft"
            android:id="@+id/activity_login_input"/>

    <com.huntor.scrm.view.EditText.ColorUnderLineEditText
            style="@style/Login_edit_input"
            android:hint="请输入用户名"
            android:id="@+id/activity_login_name"
            android:layout_centerVertical="true" />
    <com.huntor.scrm.view.EditText.ColorUnderLineEditText
            android:inputType="textPassword"
            style="@style/Login_edit_input"
            android:id="@+id/activity_login_pwd"
            android:layout_marginTop="@dimen/activity_login_edit_top"
            android:hint="请输入密码"
            android:layout_below="@+id/activity_login_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_help"
            android:text="需要帮助？"
            android:layout_below="@+id/activity_login_pwd"
            android:layout_marginTop="@dimen/activity_login_help_top"
            android:id="@+id/login_help"
            android:layout_marginLeft="@dimen/activity_login_help_left"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#000000"
            android:layout_marginLeft="@dimen/activity_login_back_left"
            android:layout_marginRight="@dimen/activity_login_back_left"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_login_view_buttom"
            android:id="@+id/view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/activity_login_back_buttom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/login_back"
                    android:layout_marginLeft="@dimen/activity_login_back_left"
                    android:text="返回"
                    android:textSize="@dimen/activity_login_back_textsize"
                    android:id="@+id/activity_login_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="登陆"
                    android:textSize="@dimen/activity_login_back_textsize"
                    android:id="@+id/activity_login_buttom"
                    android:layout_alignParentBottom="true"
                    android:gravity="right"
                    android:layout_marginRight="@dimen/activity_login_back_left"/>
        </LinearLayout>

