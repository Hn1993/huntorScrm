<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_bacground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_fragment_mymember_new_fans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerlayout_mian_item_height"
            android:background="@drawable/selector_mymember"
            android:orientation="horizontal">

            <ImageView
                style="@style/member_header"
                android:src="@drawable/online_member_header" />

            <TextView
                style="@style/member_text"
                android:layout_marginLeft="@dimen/drawerlayout_mian_text_marginLeft"
                android:text="在线交互粉丝"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/text_number_people_new_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="100dp"
                android:paddingLeft="100dp" />

            <ImageView

                style="@style/member_go" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lighter_gray" />

        <LinearLayout
            android:id="@+id/layout_fragment_mymember_high_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerlayout_mian_item_height"
            android:background="@drawable/selector_mymember"
            android:orientation="horizontal">

            <ImageView
                style="@style/member_header"
                android:src="@drawable/high_user_header" />

            <TextView
                style="@style/member_text"
                android:layout_marginLeft="@dimen/drawerlayout_mian_text_marginLeft"
                android:text="高潜会员"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/text_number_people_high_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="100dp"
                android:paddingLeft="100dp" />

            <ImageView style="@style/member_go" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lighter_gray" />

        <LinearLayout
            android:id="@+id/layout_fragment_mymember_normal_fans"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerlayout_mian_item_height"
            android:background="@drawable/selector_mymember"
            android:orientation="horizontal">

            <ImageView
                style="@style/member_header"
                android:src="@drawable/member_normal_header" />

            <TextView
                style="@style/member_text"
                android:layout_marginLeft="@dimen/drawerlayout_mian_text_marginLeft"
                android:text="普通粉丝"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/text_number_people_normal_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="100dp"
                android:paddingLeft="100dp" />

            <ImageView style="@style/member_go" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lighter_gray" />

        <LinearLayout
            android:id="@+id/layout_fragment_mymember_buyed_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerlayout_mian_item_height"
            android:background="@drawable/selector_mymember"
            android:orientation="horizontal">

            <ImageView
                style="@style/member_header"
                android:src="@drawable/buyed_user_header" />

            <TextView
                style="@style/member_text"
                android:layout_marginLeft="@dimen/drawerlayout_mian_text_marginLeft"
                android:text="已购用户"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/text_number_people_buyed_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="100dp"
                android:paddingLeft="100dp" />

            <ImageView style="@style/member_go" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lighter_gray" />

        <LinearLayout
            android:id="@+id/layout_fragment_mymember_my_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerlayout_mian_item_height"
            android:background="@drawable/selector_mymember"
            android:orientation="horizontal">

            <ImageView
                style="@style/member_header"
                android:src="@drawable/my_group_header" />

            <TextView
                style="@style/member_text"
                android:layout_marginLeft="@dimen/drawerlayout_mian_text_marginLeft"
                android:text="我的分组"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="100dp"
                android:paddingLeft="100dp" />

            <ImageView style="@style/member_go" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lighter_gray" />

        <!--<LinearLayout
            android:id="@+id/layout_fragment_mymember_other_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/drawerlayout_mian_item_height"
            android:background="@drawable/selector_mymember"
            android:orientation="horizontal">

            <ImageView
                style="@style/member_header"
                android:src="@drawable/other_group_header" />

            <TextView
                style="@style/member_text"
                android:layout_marginLeft="@dimen/drawerlayout_mian_text_marginLeft"
                android:text="其他分组"
                android:textColor="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="100dp"
                android:paddingLeft="100dp" />

            <ImageView style="@style/member_go" />

        </LinearLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/lighter_gray" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/drawerlayout_mian_image_marginLeft"
            android:layout_marginRight="@dimen/drawerlayout_mian_image_marginLeft"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/image_second_wave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/load_more" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99ffffff"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/drawerlayout_mian_image_marginLeft"
            android:layout_marginRight="@dimen/drawerlayout_mian_image_marginLeft"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="发消息" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/send_message" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="加入分组" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/join_group" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="完成" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/second_wave" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>