<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:fab="http://schemas.android.com/apk/res-auto"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/default_bacground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    style="@style/member_item_text_name"
                    android:text="昵称"
                    android:id="@+id/member_info_nicheng" />
            <View
                    style="@style/item_divider_member_style"
                    android:layout_below="@id/member_info_nicheng"
                    android:id="@+id/view_line0" />

            <TextView
                    android:text=""
                    style="@style/member_item_text_time"
                    android:id="@+id/member_nickName_1"
                    android:layout_below="@id/view_line0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/member_item_text_name"
                android:text="地区"
                android:id="@+id/member_info_diqu" />
            <View
                style="@style/item_divider_member_style"
                android:layout_below="@id/member_info_diqu"
                android:id="@+id/view_line1" />

            <TextView
                android:text="湖南"
                style="@style/member_item_text_time"
                android:id="@+id/member_provice_1"
                android:layout_below="@id/view_line1" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/member_item_text_name"
                android:text="最近交互"
                android:id="@+id/member_info_zuijin" />
            <View
                style="@style/item_divider_common_style"
                android:layout_below="@id/member_info_zuijin"
                android:id="@+id/view_line2" />

            <TextView
                android:text="5小时前"
                style="@style/member_item_text_time"
                android:id="@+id/interation_time_before_1"
                android:layout_below="@id/view_line2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/member_item_text_name"
                android:text="交互次数"
                android:id="@+id/member_info_cishu" />
            <View
                style="@style/item_divider_common_style"
                android:layout_below="@id/member_info_cishu"
                android:id="@+id/view_line3" />

            <TextView
                android:text="3次"
                style="@style/member_item_text_time"
                android:id="@+id/brwose_num"
                android:layout_below="@id/view_line3" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/member_item_text_name"
                android:text="其他分组"
                android:id="@+id/member_info_fenzu" />
            <View
                style="@style/item_divider_common_style"
                android:layout_below="@id/member_info_fenzu"
                android:id="@+id/view_line4" />

                <TextView
                        style="@style/member_item_text_time"
                    android:text="高潜粉丝群"
                    android:id="@+id/in_the_group"
                    android:layout_below="@id/view_line4"
                    />


        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/menu1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                fab:menu_labels_ellipsize="end"
                fab:menu_labels_singleLine="true"
                fab:menu_backgroundColor="#ccffffff"
                fab:menu_fab_label=""
                fab:menu_colorNormal="#1F257B"
                fab:menu_colorPressed="#1f557b"
                fab:menu_colorRipple="#1F257B">
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/send_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_message"
                    fab:fab_size="mini"
                    fab:fab_label="发消息"
                    fab:fab_colorNormal="#1F257B"
                    fab:fab_colorPressed="#1f557b"
                    fab:fab_colorRipple="#1F257B"/>
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/join_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/join_group"
                    fab:fab_size="mini"
                    fab:fab_label="加入分组"
                    fab:fab_colorNormal="#1F257B"
                    fab:fab_colorPressed="#1f557b"
                    fab:fab_colorRipple="#1F257B"/>
        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>



    <RelativeLayout
        android:visibility="gone"
    android:layout_gravity="center_horizontal|bottom"
    android:layout_width="match_parent"
    android:layout_height="200dp" >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/drawerlayout_mian_image_marginLeft"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/drawerlayout_mian_image_marginLeft"
        android:id="@+id/linearLayout2" >

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/load_more"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:background="#99ffffff"
        android:id="@+id/layout_finish"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/drawerlayout_mian_image_marginLeft"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/drawerlayout_mian_image_marginLeft" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <Button
                    android:text="发消息"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_message"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp">
                <Button
                    android:text="加入分组"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/join_group"
                    android:layout_gravity="center"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:text="完成"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/second_wave"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>