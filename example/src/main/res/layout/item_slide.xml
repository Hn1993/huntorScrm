<?xml version="1.0" encoding="utf-8"?>
<com.huntor.mscrm.app2.ui.component.SlideItem xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_detailinfomation3_buyed_more_list_height"
                android:background="#FFFFFF">
            <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/item_detaileinfo_image"
                    android:layout_width="@dimen/activity_detailinfomation3_buyed_more_image_height"
                    android:layout_height="@dimen/activity_detailinfomation3_buyed_more_image_height"

                    android:layout_marginRight="@dimen/activity_detailinfomation3_image_margin_right"
                    android:layout_marginLeft="@dimen/activity_detailinfomation3_image_margin_left"


                    android:src="@drawable/item_detaileinfo_buyed_image"
                    />
            <TextView
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:id="@+id/item_detaileinfo_wantbuy"
                    android:layout_width="@dimen/buy_more_list_textHeight"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="平板电脑"
                    android:textSize="@dimen/activity_detailinfomation1_text2_size"

                    android:singleLine="true"
                    />
            <TextView
                    android:layout_weight="1"
                    android:id="@+id/item_detaileinfo_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/activity_detailinfomation1_text2_size"
                    android:text="一个月内"


                    />

        </LinearLayout>
        <LinearLayout
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:orientation="horizontal"
                android:background="#556677"
                >
            <TextView
                    android:id="@+id/text_delete"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="DELETE"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
        </LinearLayout>
    </LinearLayout>


</com.huntor.mscrm.app2.ui.component.SlideItem>