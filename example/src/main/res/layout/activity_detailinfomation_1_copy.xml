<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ebebeb">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <!--android:layout_width="@dimen/activity_detailinfomation1_image_height"-->
                <!--android:layout_height="@dimen/activity_detailinfomation1_image_height"-->
                <ImageView

                        android:layout_width="@dimen/activity_detailinfomation1_image_height"
                        android:layout_height="@dimen/activity_detailinfomation1_image_height"
                        android:id="@+id/image_people_head"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="@dimen/activity_detailinfomation1_image_margin_left"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_image_margin_top"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="@dimen/activity_detailinfomation1_text_size"
                          android:id="@+id/people_name"
                          android:layout_marginLeft="@dimen/activity_detailinfomation1_text_margin_lefte"
                          android:layout_marginTop="@dimen/activity_detailinfomation1_text1_margin_top"
                          android:textColor="#000000"
                          android:drawablePadding="10dp"


                        />
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textSize="17sp"
                          android:id="@+id/people_time"

                          android:layout_marginLeft="@dimen/activity_detailinfomation1_text_margin_lefte"
                          android:layout_marginTop="@dimen/activity_detailinfomation1_text1_totext_top"
                        />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                >


            <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_detailinfomation1_list_height"
                    android:background="#FFFFFF"
                    android:layout_gravity="center"
                    >
                <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="地区"
                        android:id="@+id/member_area"

                        android:textSize="@dimen/activity_detailinfomation1_text_size"

                        android:layout_marginLeft="@dimen/activity_detailinfomation1_text2_margin_left"
                        android:textColor="#000000"
                        android:layout_centerVertical="true" android:layout_alignParentStart="true"
                        android:layout_marginStart="21dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerVertical="true"
                        android:id="@+id/member_provice_1"
                        android:layout_marginLeft="250dp"
                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_detailinfomation1_list_height"

                    >

                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="最近交互"
                        android:id="@+id/interation_time"
                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        android:layout_marginLeft="@dimen/activity_detailinfomation1_text2_margin_left"
                        android:textColor="#000000"

                        />
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=""
                        android:id="@+id/interation_time_before_1"
                        android:layout_marginLeft="250dp"
                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        />
                <View

                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:background="@color/view_line"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
            </RelativeLayout>
            <RelativeLayout
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/activity_detailinfomation1_list_height"


                    >

                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="交互次数"
                        android:id="@+id/browse"
                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        android:layout_marginLeft="@dimen/activity_detailinfomation1_text2_margin_left"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text=""
                        android:id="@+id/brwose_num"
                        android:layout_marginLeft="250dp"
                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        />
                <View

                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:background="@color/view_line"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
            </RelativeLayout>



            <RelativeLayout
                    android:background="#FFFFFF"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/relativelayout_in_the_group"
                    android:minHeight="@dimen/activity_detailinfomation1_list_height"
                    >

                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="所在分组"

                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        android:layout_marginLeft="@dimen/activity_detailinfomation1_text2_margin_left"
                        android:textColor="#000000"/>
                <TextView
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"



                        android:layout_marginLeft="250dp"
                        android:textSize="@dimen/activity_detailinfomation1_text_size"
                        android:layout_marginTop="@dimen/activity_detailinfomation1_text2_margin_top"
                        android:layout_marginBottom="@dimen/activity_detailinfomation1_text2_margin_buttom"
                        android:id="@+id/in_the_group"

                        />
                <View

                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:background="@color/view_line"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        />
            </RelativeLayout>

        </LinearLayout>
        <Button
                android:layout_marginTop="10dp"
                android:layout_width="@dimen/activity_detailinfomation1_button_width"
                android:layout_height="@dimen/activity_detailinfomation1_button_height"
                android:text="发消息"
                android:id="@+id/send_message"
                android:textSize="@dimen/activity_detailinfomation1_text_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/selector_detaileinfo_button"
                android:focusable="true"
                android:textColor="#FFFFFF"
                />

        <Button
                android:layout_marginTop="@dimen/activity_detailinfomation1_button1_tobutton2_height"
                android:layout_marginBottom="30dp"
                android:layout_width="@dimen/activity_detailinfomation1_button_width"
                android:layout_height="@dimen/activity_detailinfomation1_button_height"
                android:text="加入分组"
                android:id="@+id/join_group"
                android:textSize="@dimen/activity_detailinfomation1_text_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000000"
                android:background="@drawable/selector_join_group"
                android:focusable="true"
                />


    </LinearLayout>


</ScrollView>