<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/detailinfo2_gender_layout_outside"
              android:orientation="vertical"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#90000000">
    <LinearLayout android:layout_width="@dimen/activity_detailinfomation2_editor_width"
                  android:layout_height="@dimen/activity_detailinfomation_layout_height"
                  android:layout_gravity="center"
                  android:orientation="horizontal"
                  android:background="#ffffff"
                  android:id="@+id/linearLayout4"
                  android:layout_above="@+id/linearLayout3"
                  android:layout_alignStart="@+id/linearLayout3">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:layout_gravity="center"
                  android:text="性别"
                  android:paddingLeft="20dp"
                  android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout android:layout_width="@dimen/activity_detailinfomation2_editor_width"
                  android:layout_height="@dimen/activity_detailinfomation_layout_height"
                  android:layout_gravity="center"
                  android:orientation="horizontal"
                  android:background="@drawable/selector_detailinfo2_editor"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/detailinfo2_gender_select_man"

            >
        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:layout_gravity="center"
                  android:text="男"
                  android:paddingLeft="20dp"
                />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/detailinfo2_editor_image"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:scaleX="0.7"
                   android:scaleY="0.7"
                   android:id="@+id/detailinfo2_gender_select_man_image"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="@dimen/activity_detailinfomation2_editor_width"
                  android:background="#ffffff"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">

        <View


                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/view_line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="@dimen/activity_detailinfomation2_editor_width"
                  android:layout_height="@dimen/activity_detailinfomation_layout_height"
                  android:layout_gravity="center"
                  android:orientation="horizontal"
                  android:background="@drawable/selector_detailinfo2_editor"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/detailinfo2_gender_select_woman"
            >
        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:text="女"
                  android:paddingLeft="20dp"
                />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/detailinfo2_editor_image"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:scaleX="0.7"
                   android:scaleY="0.7"
                   android:id="@+id/detailinfo2_gender_select_woman_image"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="@dimen/activity_detailinfomation2_editor_width"
                  android:background="#ffffff"
                  android:layout_gravity="center_horizontal"
                  android:layout_height="wrap_content">

        <View


                android:layout_width="match_parent"
                android:layout_height="@dimen/divider"
                android:background="@color/view_line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
    </LinearLayout>
    <LinearLayout android:layout_width="@dimen/activity_detailinfomation2_editor_width"
                  android:layout_height="@dimen/activity_detailinfomation_layout_height"
                  android:layout_gravity="center"
                  android:orientation="horizontal"
                  android:background="@drawable/selector_detailinfo2_editor"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  android:id="@+id/detailinfo2_gender_select_no"
            >
        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:text="未知"
                  android:paddingLeft="20dp"
                />
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/detailinfo2_editor_image"
                   android:layout_gravity="center"
                   android:layout_weight="1"
                   android:visibility="gone"
                   android:scaleX="0.7"
                   android:scaleY="0.7"
                   android:id="@+id/detailinfo2_gender_select_no_image"
                />
    </LinearLayout>




</LinearLayout>