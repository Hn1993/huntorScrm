<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/root"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:clickable="true"
                android:background="@color/white"
        >

    <LinearLayout
            android:id="@+id/layout_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="60dp"
            android:orientation="vertical"
            android:background="@color/slide_menu_bg"
            >

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_vivo"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerInside"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:text="Mobile Â· SCRM"
                />

        <TextView
                android:id="@+id/version_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:layout_gravity="center_horizontal"
                android:text="@string/ver_code"
                />

        <TextView
                android:id="@+id/text_set_tails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/edit_signature"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:textSize="18sp"
                />
    </LinearLayout>


    <TextView
            android:id="@+id/tv_test"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text=""
            android:gravity="center"
            android:visibility="visible"/>


    <TextView
            android:id="@+id/tv_msg_center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_logo"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="@string/msg_center"
            android:drawablePadding="15dp"
            android:textSize="18sp"
            android:drawableStart="@drawable/msg_center"
            />

    <TextView
            android:id="@+id/tv_msg_center_num"
            android:layout_alignTop="@id/tv_msg_center"
            android:layout_marginStart="45dp"
            android:visibility="gone"
            style="@style/chat_number_unread_style"
            />

    <TextView
            android:id="@+id/check_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg_center"
            android:gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:text="@string/app_update"
            android:drawablePadding="15dp"
            android:textSize="18sp"
            android:drawableStart="@drawable/check_update"
            />

    <TextView
            android:id="@+id/tv_new_version"
            android:layout_alignTop="@id/check_update"
            android:layout_marginStart="45dp"
            android:text="@string/new_version"
            android:visibility="gone"
            style="@style/chat_number_unread_style"
            />


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            >

        <TextView
                android:id="@+id/modify_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/left_drawer_bottom_text"
                android:layout_gravity="center_horizontal"
                android:text="@string/modify_psw"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:textSize="18sp"
                android:drawableStart="@drawable/modify_psw"
                />

        <TextView
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/left_drawer_bottom_text"
                android:layout_gravity="center_horizontal"
                android:text="@string/logout"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:layout_marginStart="30dp"
                android:textSize="18sp"
                android:drawableStart="@drawable/logout"
                />
    </LinearLayout>

</RelativeLayout>