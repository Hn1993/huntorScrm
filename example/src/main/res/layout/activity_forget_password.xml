<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
        >

    <include layout="@layout/activity_base"/>

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
            >

        <com.huntor.mscrm.app.ui.component.GrayUnderLineEditText
                android:id="@+id/et_username"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="@dimen/edit_height_size"
                android:hint="@string/please_enter_username"
                android:textColor="@color/grgray"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/activity_login_edit_padding_left"
                android:paddingEnd="@dimen/activity_login_edit_padding_left"
                android:layout_marginStart="@dimen/activity_login_edit_margin"
                android:background="@null"
                android:singleLine="true"
                android:maxLength="12"
                />
        <Button
                android:id="@+id/btn_req_verify_code"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_psw_change_btn"
                android:layout_marginEnd="@dimen/activity_login_edit_margin"
                android:layout_marginStart="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="@string/req_verify_code"
                android:textColor="@color/white"
                />

    </LinearLayout>


    <com.huntor.mscrm.app.ui.component.GrayUnderLineEditText
            android:id="@+id/et_verify_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height_size"
            android:hint="@string/please_enter_verify_code"
            android:textColor="@color/grgray"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/activity_login_edit_padding_left"
            android:paddingEnd="@dimen/activity_login_edit_padding_left"
            android:layout_marginLeft="@dimen/activity_login_edit_margin"
            android:layout_marginRight="@dimen/activity_login_edit_margin"
            android:background="@null"
            android:singleLine="true"
            android:maxLength="6"
            />


    <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_height_size"
            android:background="@drawable/selector_psw_change_btn"
            android:layout_marginTop="@dimen/activity_psw_change_btn_margin_top"
            android:layout_marginLeft="@dimen/activity_psw_change_btn_margin_left_right"
            android:layout_marginRight="@dimen/activity_psw_change_btn_margin_left_right"
            android:text="@string/confirm"
            android:textColor="@color/white"
            />

</LinearLayout>
