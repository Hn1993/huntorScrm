<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:background="@color/white"
              android:layout_height="match_parent"
              android:clickable="true"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_title_height"
            android:background="#1779d0"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:orientation="horizontal"
            >

        <RelativeLayout
                style="@style/layout_left_corner"
                android:id="@+id/img_left_corner">
            <ImageView
                    style="@style/img_title_common_style"
                    />
        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="自定义分组"
                android:textColor="@color/white"
                android:textSize="@dimen/base_title_text_size"
                />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

        <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/custom_group_name_icon"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="#444444"
                android:textSize="15sp"
                android:text="分组名称"
                />

        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:id="@+id/edit_text"
                android:textColor="@color/black"
                />

    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="#dddddd"
            />

    <Button
            android:id="@+id/sure_add_btn"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="#33cd5f"
            android:layout_marginTop="16dp"
            android:text="确认添加"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            />

</LinearLayout>
