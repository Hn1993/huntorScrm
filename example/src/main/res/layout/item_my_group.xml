<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/list_item_height"
                android:gravity="center_vertical"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

        <ImageView
                android:id="@+id/iv_my_group_head"
                android:src="@drawable/my_group_header"
                style="@style/member_header"
                />

        <TextView
                android:id="@+id/text_item_my_group_name"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_marginStart="20dp"
                android:textSize="15sp"
                android:text="@string/my_group_name_test"
                android:textColor="@color/black"
                />

        <TextView
                android:id="@+id/text_item_my_group_update"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:text="@string/my_group_update_test"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:gravity="end"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_corner"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="17dp"
                />

    </LinearLayout>

    <View
            style="@style/item_divider_common_style"
            />

</RelativeLayout>