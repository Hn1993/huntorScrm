<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        >

    <ImageView
            android:id="@+id/img_item_chat_contact_list_head"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            />

    <TextView
            android:id="@+id/text_item_chat_contact_number_unread"
            android:layout_marginStart="44dp"
            android:layout_marginTop="6dp"
            android:text="@string/unread_count"
            />

    <LinearLayout
            android:id="@+id/ll_center"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@id/img_item_chat_contact_list_head"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            >

        <TextView
                android:id="@+id/text_item_chat_contact_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_group_name_test"
                android:textSize="18sp"
                />

        <TextView
                android:id="@+id/text_item_chat_contact_list_last_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                />

    </LinearLayout>


    <TextView
            android:id="@+id/text_item_chat_contact_list_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_group_update_test"
            android:layout_alignTop="@id/ll_center"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            />


    <TextView
            android:id="@+id/img_item_chat_contact_list_grade"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignEnd="@id/text_item_chat_contact_list_last_time"
            android:layout_alignBottom="@id/ll_center"
            android:background="@drawable/shape_contact_list_user_grade"
            android:text="@string/user_grade_buyed"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

    <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/view_line"
            android:layout_marginTop="12dp"
            android:layout_below="@id/ll_center"
            />

</RelativeLayout>