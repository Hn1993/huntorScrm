<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeTranslucent" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <!--水波纹效果的style-->
    <style name="RaiseWaveColorButtonRippleStyle" parent="Material.Drawable.Ripple.Wave.Light">
        <item name="android:background">@color/colorPrimary</item>
        <item name="rd_rippleColor">#33000000</item>
        <item name="rd_leftPadding">1dp</item>
        <item name="rd_topPadding">1dp</item>
        <item name="rd_rightPadding">1dp</item>
        <item name="rd_bottomPadding">2dp</item>
    </style>
    <style name="Material.Drawable.Ripple.Wave.Light" parent="Material.Drawable.Ripple.Wave">
        <item name="rd_rippleColor">#66999999</item>
    </style>
    <style name="Material.Drawable.Ripple.Wave" parent="Material.Drawable.Ripple">
        <item name="rd_maxRippleRadius">48dp</item>
        <item name="rd_rippleColor">#3FCCCCCC</item>
        <item name="rd_rippleAnimDuration">200</item>
        <item name="rd_rippleType">wave</item>
    </style>
    <style name="Material.Drawable.Ripple">
        <item name="rd_enable">true</item>
        <item name="rd_inInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_outInterpolator">@android:anim/decelerate_interpolator</item>
        <item name="rd_maskType">rectangle</item>
        <item name="rd_cornerRadius">2dp</item>
        <item name="rd_padding">0dp</item>
        <item name="rd_delayClick">none</item>
    </style>
    <style name="Material.Drawable"></style>
    <style name="Material"></style>


    <!-- 自定义dialog -->
    <style name="CustomLoadingDialog" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--login-->
    <style name="Login_edit_input" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_login_edit_height</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_text_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/activity_login_text_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/activity_login_edit_top</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/input_name_textcolor</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">12</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <!--my member -->
    <style name="member_header" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/drawerlayout_mian_image_marginLeft</item>
    </style>
    <style name="member_text" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="member_go" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">-50dp</item>
        <item name="android:src">@drawable/member_go</item>
    </style>

    <!--会员列表的样式-->
    <style name="member_item_text_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_mymember_item_name_size</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/fragment_mymember_img_margin_left_right</item>
    </style>

    <style name="member_item_text_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/fragment_mymember_item_time_size</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/fragment_mymember_item_time_margintop</item>
        <item name="android:layout_alignParentStart">true</item>

    </style>

    <style name="item_divider_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/huntor_bacground</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/fragment_mymember_img_margin_left_right</item>
    </style>

    <!--fans-->
    <style name="faninfo_default_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/fragment_fansinfo_header_marginleft</item>
        <item name="android:layout_marginTop">@dimen/fragment_fansinfo_header_margintop</item>

    </style>

    <style name="faninfo_default_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fragment_fansinfo_name_margintop</item>
        <item name="android:textSize">@dimen/fragment_fansinfo_name_textsize</item>
        <item name="android:drawablePadding">@dimen/fragment_fansinfo_name_drawaberpadding</item>
    </style>

    <style name="faninfo_default_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fragment_fansinfo_time_margintop</item>
        <item name="android:textSize">@dimen/fragment_fansinfo_time_textsize</item>
        <item name="android:layout_marginBottom">@dimen/fragment_fansinfo_time_marginbuttom</item>
    </style>

</resources>
