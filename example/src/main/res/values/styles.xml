<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/primary_material_light</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <!--自定义标题样式-->
    <style name="custom_title_theme">
        <item name="android:windowTitleSize">56dp</item>
        <item name="android:windowTitleStyle">@style/activity_title_text_style</item>
        <item name="android:windowTitleBackgroundStyle">@style/activity_title_background_style</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="activity_title_background_style">
        <item name="android:background">@color/login_bg</item>
    </style>

    <style name="activity_title_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- 主界面中下方的RadioButton的样式 -->
    <style name="main_bottom_bar_radio_group">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">-30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 自定义dialog -->
    <style name="CustomLoadingDialog" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--会员列表头像样式-->
    <style name="member_head_icon_style">
        <item name="android:layout_width">23dp</item>
        <item name="android:layout_height">23dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <!--各个分组头像样式-->
    <style name="head_icon_style">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>


    <!-- 登录界面中CheckBox的样式 -->
    <style name="login_check_box_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:button">@drawable/selector_login_check_box</item>
    </style>

    <!--我的会员title统一规格-->
    <style name="item_title_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/fragment_mymember_text_size</item>
        <item name="android:textColor">@color/fragment_mymember_text_color</item>
    </style>

    <!-- 点击Layout返回 img_left_corner的layout样式-->
    <style name="layout_left_corner">
        <item name="android:layout_width">63dp</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <!-- 标题中左边img_left_corner样式 -->
    <style name="img_title_common_style">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:src">@drawable/left_corner</item>
    </style>

    <!-- 标题中间title样式 -->
    <style name="text_title_center_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/base_title_text_size</item>
    </style>

    <!-- 标题左侧title样式 -->
    <style name="text_title_left_commom_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">63dp</item>
        <item name="android:textSize">@dimen/base_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- 标题右侧添加按钮 -->
    <style name="icon_text_title_right_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/icon_text_plus</item>
        <item name="android:textSize">@dimen/base_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">10dp</item>
    </style>
    <!-- IMEI码右侧的判断是否正确  -->
    <style name="icon_imei_title_right_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/base_title_text_size</item>
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_toRightOf">@+id/text_interaction_code_two_dimension</item>
        <item name="android:paddingLeft">10dp</item>

    </style>


    <!--我的会员item人数文本样式-->
    <style name="item_count_common_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:textSize">@dimen/fragment_mymember_people_number_size</item>
        <item name="android:paddingLeft">@dimen/fragment_mymember_people_padding_left_right</item>
        <item name="android:paddingRight">@dimen/fragment_mymember_people_padding_left_right</item>
    </style>

    <!--我的会员arrow统一样式-->
    <style name="item_arrow_common_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@drawable/right_corner</item>
    </style>

    <!-- 未读消息样式 -->
    <style name="chat_number_unread_style">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/shape_chat_number_unread2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="item_divider_common_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/huntor_bacground</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/fragment_mymember_img_margin_left_right</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:width">100dp</item>
        <item name="android:height">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent_1</item>
    </style>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="AppTheme.Base">
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/huntor_bacground</item>
    </style>

    <style name="ActionBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>
    <style name="ActionBarItem">
        <item name="android:layout_width">@dimen/actionbar_item_width</item>
        <item name="android:layout_height">@dimen/actionbar_height</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginLeft">1px</item>
    </style>
    <style name="ActionBarHomeItem" parent="ActionBarItem">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>
    <style name="ActionBarHomeLogo">
        <item name="android:layout_marginRight">1px</item>
        <item name="android:layout_marginLeft">0px</item>
    </style>
    <style name="ActionBarProgressBar" parent="@android:style/Widget.ProgressBar.Small">
    </style>

    <!-- 底部导航文本样式-->
    <style name="main_fragment_tab_tv_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/main_tab_tv_selector</item>
        <item name="android:textSize">@dimen/activity_main_bottom_text_size2</item>
        <item name="android:button">@null</item>
    </style>


    <!--会员详情->账户信息的编辑按钮的样式 -->
    <style name="account_information_to_compile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:textSize">@dimen/account_information_to_compile</item>
        <item name="android:textColor">@color/lighter_gray</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">-50dp</item>
        <item name="android:text">@string/account_information_to_compile</item>
    </style>


    <!--my member new -->
    <style name="member_header" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/drawerlayout_mian_image_marginLeft</item>
    </style>
    <style name="member_text" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="member_go" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">-50dp</item>
        <item name="android:src">@drawable/member_go</item>
    </style>

    <style name="member_text2" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!--会员列表的样式-->
    <style name="member_item_text_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/huntor_bacground</item>
        <item name="android:textSize">@dimen/fragment_mymember_item_name_size</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/fragment_mymember_img_margin_left_right</item>
    </style>

    <style name="member_item_text_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/huntor_bacground</item>
        <item name="android:textSize">@dimen/fragment_mymember_item_time_size</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/fragment_mymember_item_time_margintop</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="item_divider_member_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/huntor_bacground</item>
        <item name="android:layout_marginLeft">@dimen/fragment_mymember_img_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/fragment_mymember_img_margin_left_right</item>
    </style>


    <!--fans-->
    <style name="faninfo_default_header">
        <item name="android:layout_width">@dimen/fab_size_normal</item>
        <item name="android:layout_height">@dimen/fab_size_normal</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_marginLeft">@dimen/fragment_fansinfo_header_marginleft</item>
        <item name="android:layout_marginTop">@dimen/fragment_fansinfo_header_margintop</item>

    </style>

    <style name="faninfo_default_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fragment_fansinfo_name_margintop</item>
        <item name="android:textSize">@dimen/fragment_fansinfo_name_textsize</item>
        <item name="android:drawablePadding">@dimen/fragment_fansinfo_name_drawaberpadding</item>
    </style>

    <style name="faninfo_default_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">@dimen/fragment_fansinfo_time_margintop</item>
        <item name="android:textSize">@dimen/fragment_fansinfo_time_textsize</item>
        <item name="android:layout_marginBottom">@dimen/fragment_fansinfo_time_marginbuttom</item>
    </style>

    <style name="Login_edit_input" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/activity_login_edit_height</item>
        <item name="android:layout_marginLeft">@dimen/activity_login_text_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/activity_login_text_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/activity_login_edit_top</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/input_name_textcolor</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">12</item>
        <item name="android:paddingLeft">10dp</item>
    </style>


    <!--fab-->

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/app_primary</item>
        <item name="colorPrimaryDark">@color/app_primary_dark</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>



    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="MenuButtonsStyle">
        <item name="fab_size">mini</item>
        <item name="fab_showAnimation">@anim/jump_from_down</item>
        <item name="fab_hideAnimation">@anim/jump_to_down</item>
        <item name="fab_shadowColor">#444</item>
        <item name="fab_colorNormal">#FFB805</item>
        <item name="fab_colorPressed">#F2AB00</item>
        <item name="fab_colorRipple">#D99200</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>
</resources>
